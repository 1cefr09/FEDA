<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.PostMapper">
    <insert id="insert">
        insert into post (title, content, category_id,author_id, is_banned,create_time, update_time)
        values (#{title}, #{content}, #{categoryId},#{authorId},#{isBanned}, now(), now())

    </insert>

    <select id="postPageQuery" parameterType="com.example.dto.PostPageQueryDTO" resultType="com.example.entity.Post">
        SELECT *
        FROM post
        WHERE category_id = #{categoryId}
    </select>
</mapper>
